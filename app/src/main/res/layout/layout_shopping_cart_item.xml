<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_minor"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/spacing_micro"
            android:singleLine="true"
            tools:text="小炒肉"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/primary_text"
            />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_minor"
            android:layout_marginRight="@dimen/spacing_minor"
            android:minWidth="60dp"
            tools:text="￥12"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/orange"
            />

        <com.cheikh.lazywaimai.widget.ShoppingCountView
            android:id="@+id/shopping_count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_micro"
            app:scv_add_btn_bg_color="?attr/colorPrimary"
            app:scv_add_btn_text_color="@color/white"
            app:scv_minus_btn_bg_color="@color/white"
            app:scv_minus_btn_text_color="?attr/colorPrimary"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:layout_marginLeft="@dimen/spacing_minor"
        android:layout_marginStart="@dimen/spacing_minor"
        android:background="@color/divider"
        />

</LinearLayout>